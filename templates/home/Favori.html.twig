{% extends 'base.html.twig' %}

{% block javascripts %}
	<script src="https://kit.fontawesome.com/f84e5ee0a5.js" crossorigin="anonymous"></script>
{% endblock %}

{% block title %}{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

<div class="example-wrapper" style="text-align:center;">
		<p style="font-size:40px; font-family: Georgia, serif;">Mes Favoris</p>
	</div>

	<div class="example-wrapper">
		{% for h in lesfavoris %}
			<div class="card">
				<img src={{h.image}} class="card-img-top">
				<div class="card-body">
					<h5 class="card-title">{{h.theme}}</h5>
					<a href="{{path('delfavori',{'id':h.idfavori})}}" class="btn btn-danger">
						<i class="fa-solid fa-trash-can"></i>
						Supprimer des favoris</a>
				</div>
			{% endfor %}
		</div>
	{% endblock %}
