{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
		img {
			width: 50%;
			length: 50%;
		}
	</style>

	<div class="example-wrapper">
		{{h.theme}}
		<br><br>
		<img src="{{h.image}}">
		<br><br>
		<p>Date de debut : {{h.datedebut|date('d-m-Y')}}</p>
		<p>Heure de debut : {{h.heuredebut|date('H:i:s')}}</p>
		<p>Premi√®re diffusion : {{h.datefin|date('d-m-Y')}}</p>
		<p>Heure de fin : {{h.heurefin|date('H:i:s')}}</p>
		<p>Lieu : {{h.lieu}}</p>
		<p>Rue : {{h.rue}}</p>
		<p>Ville  : {{h.ville}}</p>
		<p>Codepostal : {{h.codepostal}}</p>
		<p>Date limite  : {{h.datelimite|date('d-m-Y')}}</p>
		<p>Nombres de places :{{h.nbplaces}}</p>
		<a href="{{path('inscriptionH',{'id':h.idhackathon})}}" class="btn btn-primary"><i class="fa-solid fa-file-contract"></i> S'inscrire</a>


	</div>
{% endblock %}
